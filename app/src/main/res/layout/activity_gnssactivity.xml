<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GNSSActivity">

    <LinearLayout
        android:id="@+id/Componente1"
        android:layout_width="408dp"
        android:layout_height="108dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textviewLocation_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Location"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Componente2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/esfera_celeste_layout"></include>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Componente3"
        android:layout_width="412dp"
        android:layout_height="155dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="574dp" />

    <TextView
        android:id="@+id/textviewGnss_id"
        android:layout_width="407dp"
        android:layout_height="467dp"
        android:text="@string/Gnss_Status"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="108dp" />

</androidx.constraintlayout.widget.ConstraintLayout>